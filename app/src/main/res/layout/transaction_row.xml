<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:text="Nro transacción:"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/lblNumberTransaction"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:text="1"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:text="Fecha transacción:"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/lblDateTransaction"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:text="2020-01-01"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:text="Tipo transacción:"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/lblTypeTransaction"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:text="GASTO"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:text="Valor Transacción:"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/lblValueTransaction"
                    android:layout_width="match_parent"
                    android:textColor="#000000"
                    android:text="25.00"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:text="Descripción"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/lblDescriptionTransaction"
                    android:layout_width="match_parent"
                    android:textColor="#000000"
                    android:text="Cambio de aceite auto"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <!--LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgbtnUploadPendingPods"
                android:background="@drawable/icon_pay_invoice"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:layout_width="38dp"
                android:layout_height="38dp"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:text="Cobrar"
                android:textColor="#000000" />
        </LinearLayout-->
    </LinearLayout>
</LinearLayout>