<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblQuantity"
            android:layout_width="40dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:text="1000"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/lblDescriptionItem"
            android:layout_width="155dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:text="Botellon de agua pet 20 litros"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/lblUnitValue"
            android:layout_width="47dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:gravity="right"
            android:text="5.67"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/lblSubTotal"
            android:layout_width="60dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:gravity="right"
            android:text="3660.98"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/lblDetailTax"
            android:layout_width="13dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:gravity="right"
            android:text=""
            android:textColor="#000000"/>
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/imgbtnUploadPendingPods"
            android:background="@drawable/icon_trash"
            android:layout_marginRight="11dp"
            android:layout_width="14dp"
            android:layout_height="17dp"/>
    </LinearLayout>
</LinearLayout>