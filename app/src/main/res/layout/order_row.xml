<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:text="Nro de pedido:"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/lblNumberOrder"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:text="24"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:text="Fecha del pedido:"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/lblDateOrder"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:text="2020-01-01"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:text="Fecha de entrega:"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/lblDateDelivery"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:text="2020-01-01"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:text="Total pedido: $"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/lblTotalOrder"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:text="2394.67"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:text="Estado:"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/lblOrderStatus"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:text="Entregada"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:text="Cliente:"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/lblOrderClient"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:text="Henry Esteban Gudi침o Barahona"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:text="Direcci칩n:"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/lblOrderAddress"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:text="Av. 13 de Abril y Ca침ar"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:text="Vendedor:"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/lblSeller"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:text="Esteban Gudi침o"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgbtnUploadPendingPods"
                android:background="@drawable/icon_detail_invoice"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:layout_width="38dp"
                android:layout_height="38dp"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:text="Detalle"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>