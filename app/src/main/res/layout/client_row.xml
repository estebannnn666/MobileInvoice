<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="1dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="52dp"
            android:src="@drawable/icon_contact"
            android:id="@+id/imgItem" />
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblNameClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="12sp"
                android:text="Henry Esteban GudiÃ±o barahona"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/lblDocument"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:text="1002966404"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:text=" / "
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/lblTypeBuy"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:text="Mayorista"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/lblType"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:text="Direccion"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgbtnUploadPendingPods"
                android:background="@drawable/icon_edit_client"
                android:layout_width="33dp"
                android:layout_height="33dp"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:text="Editar"
                android:textSize="12sp"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>