<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".invoices.InvoiceActivity">
    <include layout="@layout/action_bar_toolbar"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/icon_document_type">
                </ImageView>
                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioInvoice"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Factura" />

                    <RadioButton
                        android:id="@+id/radioNoteSale"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nota de venta" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/invoiceDocument"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_text"
                    android:drawableLeft="@drawable/icon_invoice_document"
                    android:drawablePadding="5dp"
                    android:textSize="14dp"
                    android:hint="@string/invoice_number"
                    android:textColorHint="#2553A9"
                    android:textColor="#27ADA5"
                    android:inputType="number" />
                <EditText
                    android:layout_marginLeft="10dp"
                    android:id="@+id/invoiceDate"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_text"
                    android:drawableLeft="@drawable/icon_invoice_date"
                    android:drawablePadding="5dp"
                    android:textSize="14dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:hint="@string/invoice_date"
                    android:textColorHint="#2553A9"
                    android:textColor="#27ADA5"
                    android:inputType="date" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/invoiceClient"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_text"
                    android:drawableLeft="@drawable/icon_client"
                    android:drawablePadding="5dp"
                    android:textSize="14dp"
                    android:hint="@string/client_name"
                    android:textColorHint="#2553A9"
                    android:textColor="#27ADA5"
                    android:inputType="text" />

                <Button
                    android:layout_marginLeft="2dp"
                    android:id="@+id/btnAddClient"
                    android:layout_width="36dp"
                    android:layout_height="33dp"
                    android:drawableLeft="@drawable/ic_person_add_black_24dp"
                    android:background="@drawable/style_button"
                    android:textColor="@color/colorWhite"/>

                <CheckBox
                    android:layout_marginLeft="30dp"
                    android:id="@+id/chkPayOut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pagada" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/lblTitleUnit"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:drawableLeft="@drawable/ic_list_data"
                    android:text="Detalle de factura" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="vertical">
                    <Button
                        android:layout_gravity="right"
                        android:id="@+id/btnOpenDialogItems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8dp"
                        android:text="Agregar"
                        android:drawableTop="@drawable/ic_add_list"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:textColor="@color/colorWhite"/>
                </LinearLayout>
            </LinearLayout>

            <ListView
                android:id="@+id/listDetailInvoice"
                android:background="@drawable/border_shape"
                android:layout_width="wrap_content"
                android:layout_height="235dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right">
                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:text="Sub total:" />
                <TextView
                    android:id="@+id/lblSubTotalFac"
                    android:gravity="right"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:text="0.00" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right">
                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:text="Tarifa 0%:" />
                <TextView
                    android:id="@+id/lblTotalSinIvaFac"
                    android:gravity="right"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:text="0.00" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right">
                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:text="Tarifa 12%:" />
                <TextView
                    android:id="@+id/lblTotalIvaFac"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="15dp"
                    android:gravity="right"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:text="0.00" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right">
                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:text="IVA 12%:" />
                <TextView
                    android:id="@+id/lblIvaFac"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="15dp"
                    android:gravity="right"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:text="0.00" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right">
                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:text="Total:" />
                <TextView
                    android:id="@+id/lblTotalFac"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="15dp"
                    android:gravity="right"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:text="0.00" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>