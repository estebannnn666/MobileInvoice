<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblNameItem"
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:drawableLeft="@drawable/ic_list_data"
            android:text="Artículo" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/txtSearchItems"
                android:layout_marginTop="8dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/style_text"
                android:drawablePadding="5dp"
                android:textSize="14dp"
                android:hint="Buscar artículo"
                android:textColorHint="#2553A9"
                android:textColor="#27ADA5"
                android:inputType="text" />
            <TextView
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:drawableLeft="@drawable/ic_search_white" />
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listAddItems"/>
    <TextView
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/txtListAddEmpty"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textSize="14sp" />
</LinearLayout>