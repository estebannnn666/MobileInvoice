<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:text="Nombre:"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/lblNameTax"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:text="2.00"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:text="DescripciÃ³n:"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/lblDescriptionTax"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:text="Impuesto al valor agredo"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:text="Porcentaje impuesto:"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/lblValueTax"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:text="2.00"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:text="%"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgbtnUploadPendingPods"
                android:background="@drawable/icon_trash"
                android:layout_width="38dp"
                android:layout_height="38dp"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:text="Quitar"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>